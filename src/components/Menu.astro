---
import FileDownload from '@/icons/FileDownload.astro'
import Print from '@/icons/Print.astro'
import ThemeMode from './ThemeMode.astro'
import Language from './LanguageButton.astro'
const {lang} = Astro.props
---

<header class="no-print">
<nav >
    <button
    id="print"
    >
        <Print/>
    </button>
        
    <button>
    <a
        title="Download CV"
        href=`./public/${lang}/Javier Gonzalez - CV-${lang}.pdf`
        download="Javier Gonzalez - CV.pdf"
        target="_blank"
      >
       <FileDownload/>
      </a>
    
        <ThemeMode/>

        <Language lang={lang}/>
</nav>
</header>
    <style>

        header {
            background-color: var(--bg-menu);
            padding:.5rem 1rem;
            position: fixed;
            width: 100%;
        }

        nav{
            display: flex;
            position: relative;
            justify-content:end;
            width: 100%;
            max-width: 700px;
            margin: 0 auto;
            gap: 8px;
        }

        a {
            color: #777;
        }

    </style>

    <script>
        const $print = document.querySelector('#print')
        $print?.addEventListener("click", ()=>{
            window.print()
        })
    </script>



