---
import Section from "@/components/Section.astro";
import {skills} from '@cv-es'
---

<Section title={skills.title}>

    <ul>
        {
            skills.description.map (({name, keywords})=>(
                <li>
                    <h4>{name}</h4>
                    <div class="skills">
                    {
                        keywords.map (keyword => (
                            <span>
                                {keyword}
                            </span>
                        ))
                    }
                    </div>
                </li>
            ))
        }
    </ul>

</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
    }
    li {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    .skills{
        display: flex;
        gap: 4px;
        flex-wrap: wrap;
    }

    span {
        border-radius: 4px;
        background-color: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 4px 6px;
    }

</style>