---
import Menu from '@/components/Menu.astro'

interface Props {
	title: string;
	lang: string
}

const { title,lang } = Astro.props;
---

<!doctype html>
<html  lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Curriculum Vitae digital" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/JG_icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Menu lang={lang}/>
		<slot />
	</body>
</html>
<style is:global>


	:root[data-theme="light"] {
		--bg-color: #efefef;
		--bg-menu: #ddd;
		--bg-button: rgb(240, 240, 240);
		--color1: #444; /*html h1 h2 h3 */
		--color2: #666; /* h4 */
		--color3: #333; /* p */
	}

	:root[data-theme="dark"] {
		--bg-color: rgb(23, 24, 28);
		--bg-menu: #222;
		--bg-button: rgb(107, 107, 107);
		--color1: #fff; /*html h1 h2 h3 */ 
		--color2: #ccc; /* h4 */
		--color3: #bbb; /* p */
		
	}


	html {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		background: var(--bg-color) ;
		color: var(--color1);
		letter-spacing: -0.025rem;
	}
	body, figure {
		margin: 0%;
		padding: 0%;
	}

	
	a {
		text-decoration: none;
	}
	ul {
		list-style: none;
		margin: 0%;
		padding: 0%;

	}
*, *::before, *::after {
	box-sizing: border-box;
}

h1, h2, h3, h4 {
	margin: 0;
	font-family: Verdana, Geneva, Tahoma, sans-serif;
	color: var(--color1);

}

h3 {
	font-size: 1.1rem;
}

h4 {
	font-size: 1rem;
	font-weight: 600;
	color: var(--color2);
}

p {
	color: var(--color3);
	font-size: .8rem;
	line-height: 1.3;
	text-wrap: pretty;
	margin-block: .5rem;
	margin: 0;
}


button {
            height: 100%;
            width: 40px;
            color: #777;
            border-radius: 4px;
            border: 1px solid #efefef;
			background-color: transparent;
			display: block;

        }

        button:hover {
            background-color: var(--bg-button);
            cursor: pointer;
        }

        button:disabled {
			display: none;
		}
		
/*only for printable elements  */
.print {
        display: none;
    }

	/* non printable elements */
.no-print {
        display: flex;

    }

@media print {
        .print {
            display: block;
			background-color: #fff;
        }

   
        .no-print {
            display: none;
        }
    }

@media (prefers-color-schema: dark) {
	:root[data-theme] {
		--bg-color: rgb(23, 24, 28);
		--color1: #fff; /*html h1 h2 h3 */ 
		--color2: #ccc; /* h4 */
		--color3: #bbb; /* p */
	}	
}

</style>
